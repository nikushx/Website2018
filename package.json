{
  "name": "react-redux-typescript-boilerplate",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@types/typescript": "^2.0.0",
    "connected-react-router": "^4.5.0",
    "react": "^16.5.2",
    "react-dom": "^16.5.2",
    "react-ga": "^2.5.3",
    "react-loadable": "^5.5.0",
    "react-redux": "^5.0.7",
    "react-router-dom": "^4.3.1",
    "react-scripts-ts": "3.1.0",
    "redux": "^4.0.0",
    "redux-observable": "1.0.0-alpha.2",
    "redux-thunk": "^2.3.0",
    "rxjs": "^6.3.3",
    "typesafe-actions": "^2.0.4"
  },
  "scripts": {
    "start": "react-scripts-ts start",
    "build": "react-scripts-ts build",
    "test": "react-scripts-ts test --env=jsdom --watchAll --verbose",
    "test:coverage": "react-scripts-ts test --env=jsdom --color --coverage --verbose",
    "eject": "react-scripts-ts eject",
    "lint": "yarn run lint-prettier",
    "lint-prettier": "prettier --config .prettierrc -l 'src/**/*.tsx*' || (echo \nThese files are not formatted correctly && false)",
    "prettier": "prettier --config .prettierrc --write 'src/**/*.tsx*'"
  },
  "devDependencies": {
    "@types/enzyme": "^3.1.14",
    "@types/enzyme-adapter-react-16": "^1.0.3",
    "@types/jest": "^23.3.2",
    "@types/node": "10.9.4",
    "@types/react": "^16.4.14",
    "@types/react-dom": "^16.0.7",
    "@types/react-loadable": "^5.4.1",
    "@types/react-redux": "^6.0.0",
    "@types/react-router-dom": "^4.3.1",
    "@types/react-router-redux": "^5.0.16",
    "@types/sinon": "^5.0.2",
    "@types/webpack-env": "^1.13.6",
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "prettier": "^1.14.3",
    "sinon": "^6.3.4",
    "typescript": "^2.8.3"
  },
  "jest": {
    "collectCoverageFrom": [
      "src/actions/**",
      "src/reducers/**",
      "src/pages/**",
      "src/components/**",
      "src/hocs/**",
      "src/lib/**"
    ]
  }
}
